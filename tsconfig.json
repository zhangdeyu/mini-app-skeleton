{
  "include": [
    "build/**/*.ts",
    "src/**/*.ts",
    "template/**/*.ts",
  ],
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitThis": true,
    "target": "es6",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "types": ["miniprogram-api-typings", "node"]
  }
}